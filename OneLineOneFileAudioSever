while read feeds; do wget -q -O - $feeds| tr '\r' '\n' | tr \' \" | sed -n 's/.*url="\([^"]*\)".*/\1/p'| sort |uniq >temp.txt; while read pods; do wget -q -nc $pods; done <temp.txt; done <podcasts.txt |ip="$(ip addr | grep 'state UP' -A2 | tail -n1 | awk '{print $2}' | cut -f1 -d'/')" | cvlc -I http --http-password CHANGEME --http-host $ip --http-port 8088 --sout-keep --sout='#duplicate{dst=rtp{mux=ts,dst=$ip:8086},dst=gather:std{access=http,mux=mpeg1,dst=:8085},dst=display,select="novideo"}' *
